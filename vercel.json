{
  "version": 2,
  "builds": [
    {
      "src": "mainapp/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/mainapp/build/$1"
    }
  ],
  "functions": {
    "server.js": {
      "maxDuration": 10
    }
  }
} 