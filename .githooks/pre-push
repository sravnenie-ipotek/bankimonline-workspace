#!/bin/bash

# Auto-increment version before push to production
BRANCH=$(git rev-parse --abbrev-ref HEAD)

if [ "$BRANCH" = "production" ]; then
  echo "ðŸš€ Auto-incrementing version for production deployment..."
  node scripts/auto-version.js auto
  
  # Stage the updated files
  git add mainapp/package.json mainapp/src/config/buildInfo.ts
  
  # Amend the last commit with version update
  git commit --amend --no-edit
  
  echo "âœ… Version auto-incremented!"
fi