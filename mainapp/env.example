# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development

# API Configuration
VITE_NODE_API_BASE_URL=http://localhost:8003/api
VITE_ACCOUNT_URL=http://localhost:3001/account

# Figma Integration (Optional)
# FIGMA_ACCESS_TOKEN=your_figma_token_here

# Database Configuration (if needed locally)
# DATABASE_URL=postgresql://user:password@localhost:5432/database
# CONTENT_DATABASE_URL=postgresql://user:password@localhost:5432/content_db

# JWT Configuration
# JWT_SECRET=your_jwt_secret_here

# CORS Configuration
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Configuration (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# SMS Configuration (Optional)
# SMS_API_KEY=your_sms_provider_key
# SMS_FROM=+1234567890
