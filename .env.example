# üõ°Ô∏è ENVIRONMENT VARIABLES TEMPLATE - DEVELOPMENT
# Copy this file to .env for development or create environment-specific files:
# .env.staging, .env.production, .env.test

# ============================================================================
# CORE CONFIGURATION (REQUIRED)
# ============================================================================

# Database Configuration
# Format: postgresql://username:password@host:port/database
# For Railway: Use the DATABASE_URL from Railway dashboard
DATABASE_URL=postgresql://username:password@host:5432/bankimonline_development
DATABASE_URL_LOCAL=postgresql://username:password@localhost:5432/bankimonline_local
DATABASE_URL_STAGING=postgresql://username:password@staging-host:5432/bankimonline_staging  
DATABASE_URL_PRODUCTION=postgresql://username:password@prod-host:5432/bankimonline_production

# JWT Authentication Secret
# üö® SECURITY: Generate unique secrets for each environment
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Minimum 64 characters recommended
JWT_SECRET=development_jwt_secret_replace_with_secure_random_string_minimum_64_chars

# Server Configuration
PORT=8003
NODE_ENV=development

# ============================================================================
# CORS & SECURITY CONFIGURATION
# ============================================================================

# CORS Configuration - Allow frontend origins
# Development: localhost ports
# Staging: https://staging.bankimonline.com
# Production: https://bankimonline.com
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================

# Logging Configuration
# Levels: error, warn, info, debug
# Production: error, Staging: info, Development: debug
LOG_LEVEL=debug

# API Rate Limiting (requests per minute)
# API_RATE_LIMIT=100

# Session Timeout (seconds)
# SESSION_TIMEOUT=3600

# File Upload Configuration
# UPLOAD_MAX_SIZE=10485760

# ============================================================================
# TESTING & MONITORING (OPTIONAL)
# ============================================================================

# Percy Visual Regression Testing
# PERCY_TOKEN=your_percy_token_here

# Jira Integration for Bug Tracking
# JIRA_HOST=https://bankimonline.atlassian.net
# JIRA_EMAIL=your-email@domain.com
# JIRA_API_TOKEN=your_jira_token_here
# JIRA_PROJECT_KEY=TVKC

# ============================================================================
# ENVIRONMENT-SPECIFIC NOTES
# ============================================================================

# DEVELOPMENT (.env):
# - Use localhost URLs
# - Debug logging enabled
# - CORS allows all localhost ports
# - Non-production database

# STAGING (.env.staging):
# - Use staging database
# - Info level logging
# - CORS allows staging domain
# - Staging JWT secret (different from prod)

# PRODUCTION (.env.production):
# - Use production database
# - Error level logging only
# - CORS allows production domain only
# - Production JWT secret (unique and secure)